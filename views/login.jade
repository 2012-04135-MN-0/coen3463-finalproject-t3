extends layout

block content
  .container
    center
        h1 
          strong Login Page
        p.lead 
          strong Let us help you on your Academics.
        br
        form(role='form', action="/login",method="post", style='max-width: 300px;')
          .form-group
            h5.white 
              strong Username:
            input.form-control(type='text', name="username", placeholder='Enter Username' required='')
          .form-group
            h5.white 
              strong Password:
            input.form-control(type='password', name="password", placeholder='Password' required='')
          button.btn.btn-primary(type='submit') Login
        br
        p 
          strong Not yet registered? &nbsp;
          strong 
           a(href="/register") Create an account