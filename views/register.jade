extends layout

block content
   .container
        h1 Register Page
        p.lead Say something worthwhile here.
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username' required='')
          .form-group
            input.form-control(type='text', name="firstname", placeholder='Enter First Name' required='')
          .form-group
            input.form-control(type='text', name="lastname", placeholder='Enter Last Name' required='')
          .form-group
            input.form-control(type='text', name="course", placeholder='Enter course year-section' required='')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password' required='')
          .form-group
            p.control
                select.form-control(name='guild')
                  option Select Guild
                  option Electronics Guild
                  option Circuits Guild
                  option Calculus Guild
                  option DSP Guild
          button.btn.btn-primary(type='submit') Register
        br
        p Already have an account? &nbsp;
          a(href="/") Login
